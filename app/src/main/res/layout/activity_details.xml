<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            style="@style/TextPrimary"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="36sp"
            android:text="Activity Name"
            android:layout_width="372dp"
            android:layout_height="40dp"
            android:id="@+id/activity_name"
            android:gravity="center"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <com.oleaf.eighthours.details.ProgressCircle
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:layout_constraintTop_toBottomOf="@+id/imageButton"
            android:id="@+id/progressCircle"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.494"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/play_na"
            android:id="@+id/imageButton"
            android:background="@drawable/circle_ripple"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:tint="@color/colorAccent"
            android:scaleType="fitStart"
            android:elevation="1dp"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_name"
            />

    <ImageButton
            android:layout_width="33dp"
            android:layout_height="34dp"
            app:srcCompat="@drawable/ic_fast_forward_black_24dp"
            android:id="@+id/imageButton2"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton"
            android:background="@drawable/circle_ripple_transparent"
            android:tint="@color/colorAccent"
            android:scaleType="fitStart"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toStartOf="@+id/imageButton"
            app:layout_constraintTop_toTopOf="@+id/imageButton"
            android:scaleX="-1"/>

    <ImageButton
            android:layout_width="33dp"
            android:layout_height="34dp"
            app:srcCompat="@drawable/ic_fast_forward_black_24dp"
            android:id="@+id/imageButton3"
            app:layout_constraintStart_toEndOf="@+id/imageButton"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="@+id/imageButton"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton"
            android:background="@drawable/circle_ripple_transparent"
            android:tint="@color/colorAccent"
            android:scaleType="fitStart"
            />

    <TextView
            style="@style/TextPrimary"
            android:text="50%"
            android:textSize="50sp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/percentage"
            app:layout_constraintEnd_toEndOf="@+id/progressCircle"
            app:layout_constraintStart_toStartOf="@+id/progressCircle"
            app:layout_constraintTop_toTopOf="@+id/progressCircle"
            app:layout_constraintBottom_toBottomOf="@+id/progressCircle"/>

</android.support.constraint.ConstraintLayout>