<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"

                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            style="@style/TextPrimary"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="36sp"
            android:text="Activity Name"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/guideline8"
            app:layout_constraintBottom_toTopOf="@+id/guideline8"
            app:layout_constraintEnd_toStartOf="@+id/guideline9"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline11"/>

    <com.oleaf.eighthours.details.ProgressCircle
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:layout_constraintStart_toStartOf="@id/guideline11"
            app:layout_constraintEnd_toStartOf="@+id/guideline9"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.712"
            android:id="@+id/progressCircle"/>

    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:id="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/guideline15"
            app:layout_constraintBottom_toTopOf="@+id/guideline15"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toStartOf="@+id/guideline9"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="24dp"/>

    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:id="@+id/textView6"
            app:layout_constraintTop_toTopOf="@+id/guideline15"
            app:layout_constraintBottom_toTopOf="@+id/guideline15"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintEnd_toStartOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/guideline11"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="8dp"/>

    <TextView
            style="@style/TextSecondary"
            android:textSize="25sp"
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline15"
            app:layout_constraintBottom_toTopOf="@+id/guideline15"/>

    <android.support.constraint.Guideline
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/guideline8"
    app:layout_constraintGuide_percent="0.08"/>

    <android.support.constraint.Guideline
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/guideline15"
    app:layout_constraintGuide_percent="0.73"/>

    <android.support.constraint.Guideline
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/guideline9"
    app:layout_constraintGuide_percent="0.9"/>

    <android.support.constraint.Guideline
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/guideline11"
    app:layout_constraintGuide_percent="0.1"/>

    <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/play_na"
            android:id="@+id/imageButton"
            android:background="@drawable/circle_ripple"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:tint="@color/colorAccent"
            android:scaleType="fitStart"
            android:elevation="1dp"/>

    <ImageButton
            android:layout_width="33dp"
            android:layout_height="34dp"
            app:srcCompat="@drawable/ic_fast_forward_black_24dp"
            android:id="@+id/imageButton2"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton"
            android:background="@drawable/circle_ripple_transparent"
            android:tint="@color/colorAccent"
            android:scaleType="fitStart"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toStartOf="@+id/imageButton"
            app:layout_constraintTop_toTopOf="@+id/imageButton"
            android:scaleX="-1"/>

    <ImageButton
            android:layout_width="33dp"
            android:layout_height="34dp"
            app:srcCompat="@drawable/ic_fast_forward_black_24dp"
            android:id="@+id/imageButton3"
            app:layout_constraintStart_toEndOf="@+id/imageButton"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="@+id/imageButton"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton"
            android:background="@drawable/circle_ripple_transparent"
            android:tint="@color/colorAccent"
            android:scaleType="fitStart"
            />

    <TextView
            style="@style/TextPrimary"
            android:text="50%"
            android:textSize="50sp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/percentage"
            app:layout_constraintEnd_toEndOf="@+id/progressCircle"
            app:layout_constraintStart_toStartOf="@+id/progressCircle"
            app:layout_constraintTop_toTopOf="@+id/progressCircle"
            app:layout_constraintBottom_toBottomOf="@+id/progressCircle"/>

</android.support.constraint.ConstraintLayout>