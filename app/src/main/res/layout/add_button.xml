<?xml version="1.0" encoding="utf-8"?>
<com.oleaf.eighthours.AddButton
        xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:backgroundTint="@color/button"
              android:clickable="true"
              android:onClick="addPress"
              android:elevation="6dp"
              android:gravity="center"
              android:focusable="true"
              android:background="@drawable/add_button_bg"
        >


    <RelativeLayout
            style="@style/TransparentBackground"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1">

    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/buttonIconParent"
            android:visibility="visible"
            style="@style/TransparentBackground"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25">
        <ImageView
                style="@style/TransparentBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleX="0.6"
                android:scaleY="0.6"
                app:srcCompat="@drawable/add_white"
                android:id="@+id/buttonIcon"
                    />
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/buttonTextParent"
            style="@style/TransparentBackground"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"
            >

        <TextView
                style="@style/TransparentBackground"
                android:fontFamily="@font/didact_gothic"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/button_text"
                android:textSize="17sp"
                android:textStyle="bold"
                app:fontFamily="@font/montserrat"
                android:text="@string/add_new_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/buttonText"
                android:layout_weight="1"/>


    </RelativeLayout>
    <RelativeLayout
            style="@style/TransparentBackground"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"></RelativeLayout>

</com.oleaf.eighthours.AddButton>