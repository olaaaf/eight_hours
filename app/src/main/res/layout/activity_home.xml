<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Home">

    <view android:visibility="visible" android:layout_height="320dp" class="com.oleaf.eighthours.Circle"
          id="@+id/view" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
          android:layout_width="320dp" android:layout_marginBottom="3dp" android:id="@+id/circle"
          app:layout_constraintHorizontal_bias="0.494" app:layout_constraintVertical_bias="0.502"/>
    <TextView
            android:text="Activity Menu"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:id="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" app:fontFamily="@font/roboto" android:textSize="20sp"
            android:textAllCaps="false" android:typeface="normal" android:textColor="@color/circle_color"
            android:textStyle="bold"/>
    <TextView
            android:text="8 hours\n0 min"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="148dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/textView" app:fontFamily="@font/roboto_thin"
            android:textStyle="bold" android:textSize="60sp" android:textColor="@color/circle_color"
            android:typeface="normal"/>
    <TextView
            android:gravity="center_horizontal"
            android:layout_width="211dp"
            android:layout_height="32dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView3" android:text="@string/drag_to_add" app:layout_constraintHorizontal_bias="0.49"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="15sp"
            app:layout_constraintVertical_bias="0.646" app:fontFamily="@font/roboto_thin"
            android:textStyle="bold|italic"/>

</android.support.constraint.ConstraintLayout>