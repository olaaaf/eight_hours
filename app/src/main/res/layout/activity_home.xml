<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".Home">

    <view
            style="@style/TransparentBackground"
            class="com.oleaf.eighthours.BackgroundCircle"
            android:id="@+id/backgroundCircle"
            android:layout_width="@dimen/circle_view_width"
            android:layout_height="@dimen/circle_view_height"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/circle"
            app:layout_constraintEnd_toEndOf="@+id/circle"
            app:layout_constraintTop_toTopOf="@+id/circle"
            app:layout_constraintStart_toStartOf="@+id/circle"></view>

    <view
            style="@style/TransparentBackground"
            android:id="@+id/circle"
            class="com.oleaf.eighthours.Circle"
            android:layout_width="@dimen/circle_view_width"
            android:layout_height="@dimen/circle_view_height"
            android:adjustViewBounds="true"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/guideline6"
            app:layout_constraintTop_toTopOf="@+id/guideline6"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintHorizontal_bias="0.479"
            app:layout_constraintVertical_bias="0.15">
    </view>

    <TextView
            style="@style/TextPrimary"
            android:id="@+id/textView"
            android:layout_width="254dp"
            android:layout_height="152dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="8 hours\n0 min"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            style="@style/TextSecondary"
            android:id="@+id/textView3"
            android:layout_width="211dp"
            android:layout_height="44dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_horizontal"
            android:text="@string/timeleft"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textView"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.0"/>

    <com.oleaf.eighthours.ColorMenu
            android:id="@+id/color_menu"
            android:layout_width="@dimen/options_width"
            android:layout_height="@dimen/options_height"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:alpha="1"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            app:layout_constraintVertical_bias="0.269"
            tools:context=".Home"
            android:elevation="0dp">

        <com.oleaf.eighthours.ColorPick
                android:id="@+id/menu_view"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                app:layout_constraintHorizontal_bias="0.355"
                android:layout_marginTop="0dp"/>

    </com.oleaf.eighthours.ColorMenu>

    <com.oleaf.eighthours.Options
            android:id="@+id/options"
            android:backgroundTint="#00FFFFFF"
            android:layout_width="325dp"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            android:clipToPadding="false"
            android:gravity="bottom|clip_horizontal"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            tools:context=".Home">

        <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        <ImageButton
                android:id="@+id/editButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/clickable_circle"
                android:backgroundTint="@color/cmenu_background"
                android:tint="@color/cmenu_foreground"
                android:focusable="true" android:onClick="editPress"
                android:scaleType="fitXY"
                android:elevation="@dimen/cmenu_elevation"
                android:padding="5dp"
                android:src="@drawable/edit_button"
                android:clickable="true"
                android:visibility="visible"/>

        <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        <ImageButton
                android:id="@+id/deleteButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/clickable_circle"
                android:clickable="true"
                android:focusable="true" android:onClick="deletePress"
                android:backgroundTint="@color/cmenu_background"
                android:contentDescription="TODO" android:elevation="@dimen/cmenu_elevation"
                android:scaleType="fitXY"
                android:src="@drawable/trash"
                android:tint="@color/cmenu_foreground"/>

        <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
    </com.oleaf.eighthours.Options>

    <android.support.constraint.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25"/>
    <android.support.constraint.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75"/>

    <android.support.constraint.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

    <android.support.constraint.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8"/>

    <android.support.constraint.Guideline
            android:id="@+id/guideline7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1"/>

    <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.85"/>

    <android.support.constraint.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"/>

    <!-- TODO: add ripple effect -->
    <TextView
            android:id="@+id/addButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/add_button_bg"
            android:onClick="addPress"
            android:backgroundTint="@color/button"
            android:clickable="true"
            android:elevation="6dp"
            android:focusable="true" android:fontFamily="@font/didact_gothic"
            android:gravity="center"
            android:text="@string/addnew"
            android:textColor="@color/button_text"
            android:textSize="17sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:fontFamily="@font/montserrat"
            app:layout_constraintBottom_toTopOf="@+id/guideline7"
            app:layout_constraintTop_toTopOf="@+id/guideline7"
            app:layout_constraintVertical_bias="0.0" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline5" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"/>

    <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/ic_format_list_bulleted_black_24dp"
            android:id="@+id/listButton"
            android:background="@drawable/circle_ripple_transparent"
            android:onClick="listPress"
            app:layout_constraintTop_toTopOf="@+id/addButton"
            app:layout_constraintBottom_toBottomOf="@+id/addButton"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/circle"/>
    <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp" app:srcCompat="@drawable/ic_settings_black_24dp"
            android:id="@+id/listButton2"
            android:background="@drawable/circle_ripple_transparent"

            app:layout_constraintTop_toTopOf="@+id/addButton" app:layout_constraintBottom_toBottomOf="@+id/addButton"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toEndOf="@+id/circle"/>
    <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp" app:srcCompat="@drawable/ic_close_black_24dp"
            android:id="@+id/closeButton"
            android:background="@drawable/circle_ripple_transparent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@+id/listButton"
            app:layout_constraintTop_toBottomOf="@+id/listButton" android:visibility="gone"
            app:layout_constraintHorizontal_bias="0.25" android:onClick="closePress"
            app:layout_constraintEnd_toEndOf="@+id/listButton" app:layout_constraintBottom_toTopOf="@+id/circle"
            app:layout_constraintVertical_bias="0.72"/>

    <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/calendar"
            android:id="@+id/imageButton2"
            android:background="@drawable/circle_ripple_transparent"
            android:tint="#FF000000"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/textView6"
            app:layout_constraintHorizontal_bias="0.155"
            app:layout_constraintVertical_bias="0.558"
            app:layout_constraintBottom_toTopOf="@+id/guideline"/>

    <android.support.v4.view.ViewPager
            android:overScrollMode="never"
            android:id="@+id/calendar"
            android:layout_width="252dp"
            android:layout_height="55dp"
            android:layout_marginTop="8dp"
            style="@style/TransparentBackground"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            app:layout_constraintVertical_bias="0.66"
            app:layout_constraintBottom_toTopOf="@+id/textView6"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline5"/>

    <TextView
            style="@style/TextSecondary"
            android:autoSizeMaxTextSize="14sp"
            android:autoSizeTextType="uniform"
            android:text="Swipe left or right"
            android:layout_width="213dp"
            android:layout_height="19dp"
            android:id="@+id/textView6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/calendar"
            android:layout_marginBottom="36dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            app:layout_constraintVertical_bias="0.282"
            app:layout_constraintEnd_toEndOf="@+id/calendar"
            app:layout_constraintHorizontal_bias="0.5"/>


</android.support.constraint.ConstraintLayout>