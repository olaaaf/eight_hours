<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:background="@drawable/rectangle_ripple_transparent"
                                             android:layout_width="match_parent"
                                             android:layout_height="90dp" android:minHeight="90dp"
    android:clickable="true">

    <TextView
            android:text="0:00:00 / 1:00:00"
            android:autoSizeTextType="uniform"
            android:layout_width="0dp"
            android:layout_height="42dp"
            app:autoSizeMaxTextSize="20sp"
            android:id="@+id/ac_time" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" android:gravity="right|center_vertical"
            android:fontFamily="@font/roboto_thin" android:textSize="14sp" android:typeface="normal"
            android:textColor="@color/primary_text" android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/activity_name" app:layout_constraintEnd_toStartOf="@+id/number"
            android:layout_marginEnd="12dp" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Activity"
            android:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:id="@+id/activity_name" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="18dp" android:layout_marginTop="8dp" android:gravity="left|center_vertical"
            android:fontFamily="@font/roboto_bold" android:textSize="20sp" android:typeface="normal"
            android:textColor="@color/primary_text" android:textStyle="bold"/>
    <com.oleaf.eighthours.menu.ProgressBar
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:id="@+id/progress"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/activity_name"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toStartOf="@+id/imageView"
            android:layout_marginEnd="16dp"/>
    <TextView
            android:text="#3"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:id="@+id/number" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="18dp"
            app:layout_constraintStart_toEndOf="@+id/activity_name" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:fontFamily="@font/roboto_bold"
            android:textColor="#1c89ff"
            android:shadowDx="1" android:shadowDy="1" android:shadowRadius="1" android:textSize="24sp"
            android:gravity="center"/>
    <ImageView
            android:layout_width="42dp"
            android:layout_height="20dp" app:srcCompat="@drawable/arrow"
            android:id="@+id/imageView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:scaleX="0.8" android:tint="@color/arrow_color"
            app:layout_constraintTop_toTopOf="@+id/progress" app:layout_constraintBottom_toBottomOf="@+id/progress"/>
</android.support.constraint.ConstraintLayout>