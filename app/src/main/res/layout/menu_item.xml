<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:background="@drawable/rectangle_ripple_transparent"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:minHeight="85dp"
                                             android:clickable="true"
                                             android:stateListAnimator="@animator/item_bg"
                                             android:layout_marginTop="2dp"
                                             android:layout_marginLeft="5dp"
                                             android:layout_marginRight="5dp"
                                             android:layout_marginBottom="10dp"
>

    <TextView
            android:text="0:00:00 / 1:00:00"
            android:autoSizeTextType="uniform"
            android:layout_width="0dp"
            android:layout_height="42dp"
            app:autoSizeMaxTextSize="20sp"
            android:id="@+id/ac_time" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" android:gravity="right|center_vertical"
            android:fontFamily="@font/roboto_thin" android:textSize="14sp" android:typeface="normal"
            android:textColor="@color/primary_text" android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/activity_name" app:layout_constraintEnd_toStartOf="@+id/number"
            android:layout_marginEnd="12dp" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Activity"
            android:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:id="@+id/activity_name" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="18dp" android:layout_marginTop="8dp" android:gravity="left|center_vertical"
            android:fontFamily="@font/roboto_bold" android:textSize="20sp" android:typeface="normal"
            android:textColor="@color/primary_text" android:textStyle="bold"/>
    <com.oleaf.eighthours.menu.ProgressBar
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:elevation="1dp"
            android:id="@+id/progress"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/activity_name"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toStartOf="@+id/arrowE"
            android:layout_marginEnd="16dp"
            android:visibility="visible"/>
    <TextView
            android:text="#3"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:id="@+id/number" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="18dp"
            app:layout_constraintStart_toEndOf="@+id/activity_name" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:fontFamily="@font/roboto_bold"
            android:textColor="#1c89ff"
            android:shadowDx="1" android:shadowDy="1" android:shadowRadius="1" android:textSize="24sp"
            android:gravity="center"/>
    <ImageView
            android:stateListAnimator="@animator/arrow"
            android:layout_width="42dp"
            android:scaleY="1"
            android:layout_height="20dp" app:srcCompat="@drawable/arrow"
            android:id="@+id/arrowE" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:scaleX="0.8" android:tint="@color/arrow_color"
            app:layout_constraintTop_toTopOf="@+id/progress" app:layout_constraintBottom_toBottomOf="@+id/progress"/>
    <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/play_na"
            android:background="@drawable/circle_ripple_transparent"
            android:scaleType="fitXY"
            android:tint="@color/primary_text"
            android:id="@+id/activityButton" android:layout_marginTop="88dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:visibility="visible"
            android:layout_marginBottom="14dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.48"
            app:layout_constraintVertical_bias="1.0" android:elevation="2dp"/>
    <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circle_ripple_transparent"
            android:id="@+id/plus30"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/activityButton" android:layout_marginStart="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/activityButton"
            app:layout_constraintTop_toTopOf="@+id/activityButton" app:layout_constraintVertical_bias="0.0"
            android:text="+30s" android:gravity="center" android:fontFamily="@font/roboto_bold"
            android:visibility="visible" android:elevation="2dp"/>
    <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circle_ripple_transparent"
            android:id="@+id/minus30"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginEnd="24dp" app:layout_constraintEnd_toStartOf="@+id/activityButton"
            app:layout_constraintTop_toTopOf="@+id/activityButton"
            app:layout_constraintBottom_toBottomOf="@+id/activityButton" android:text="-30s" android:gravity="center"
            android:fontFamily="@font/roboto_bold" android:visibility="visible" android:elevation="2dp"
            app:layout_constraintVertical_bias="0.0" android:clickable="true"/>
</android.support.constraint.ConstraintLayout>