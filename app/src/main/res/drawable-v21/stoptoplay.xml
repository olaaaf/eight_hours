<?xml version="1.0" encoding="utf-8"?>

<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="12dp"
            android:height="12dp"
            android:viewportWidth="12"
            android:viewportHeight="12">
            <path
                android:name="playbutton"
                android:pathData="M 4.75 7.7 L 4.75 4.3 Z M 7.25 7.7 L 7.25 6 L 7.25 4.3 Z"
                android:fillColor="#FFF"
                android:strokeColor="#FFF"
                android:strokeWidth="1.3"
                android:strokeLineCap="round"
                android:strokeLineJoin="round"/>
        </vector>
    </aapt:attr>
    <target android:name="playbutton">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="pathData"
                android:duration="300"
                android:valueFrom="M 4.75 7.7 L 4.75 4.3 Z M 7.25 7.7 L 7.25 6 L 7.25 4.3 Z"
                android:valueTo="M 5 7.7 L 5 4.3 Z M 5 7.7 L 7.5 6 L 5 4.3 Z"
                android:valueType="pathType"
                android:interpolator="@android:interpolator/fast_out_slow_in"/>
        </aapt:attr>
    </target>
</animated-vector>
