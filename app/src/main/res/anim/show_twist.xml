<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillAfter="true"
    android:duration="400">

    <scale
            android:fromYScale="0"
            android:fromXScale="0"
            android:toXScale="1"
            android:toYScale="1"
            android:pivotX="50%"
            android:pivotY="50%"
    />

    <rotate
            android:fromDegrees="180"
            android:toDegrees="0"
            android:pivotX="50%"
            android:pivotY="50%"
    />

</set>