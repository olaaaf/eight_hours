<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="TextPrimary">
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>
    
    <style name="TextSecondary" parent="TextPrimary">
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="TransparentBackground">
        <item name="android:backgroundTint">@color/transparent</item>
    </style>

    <style name="Translucent" parent="AppTheme">
        <item name="android:elevation">2dp</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="RoundedPopup" parent="AppTheme">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:topLeftRadius">20dp</item>
        <item name="android:topRightRadius">20dp</item>
    </style>
    
</resources>
