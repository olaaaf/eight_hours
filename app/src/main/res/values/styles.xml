<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextPrimary">
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>
    
    <style name="TextSecondary" parent="TextPrimary">
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="TransparentBackground">
        <item name="android:backgroundTint">@color/transparent</item>
    </style>

    <style name="Translucent" parent="AppTheme">
        <item name="android:elevation">2dp</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetModal</item>
    </style>

    <style name="BottomSheetModal" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rect_rounded</item>
        <item name="behavior_peekHeight">@dimen/peek_height</item>
    </style>

    <style name="ColorBackground">
        <item name="android:background">@color/colorPrimary</item>
    </style>

</resources>
